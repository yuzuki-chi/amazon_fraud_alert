{
    "manifest_version": 3,
    "name": "fraud_alert",
    "version": "1.10",
    "description": "amazon.co.jpで動く, イラストの無断転用の報告ツール",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": "popup16.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://www.amazon.co.jp/*"],
        "js": [
            "js/display.js",
            "js/creator.js",
            "js/content.js"
        ]
    }]
}